{
  "name": "react-native-conceal-crypto",
  "version": "0.1.0",
  "description": "Crypto utilities for Conceal implemented in native C++ using Nitro JSI.",
  "main": "src/index.ts",
  "react-native": "src/index.ts",
  "types": "src/index.d.ts",
  "scripts": {
    "build": "npx nitrogen",
    "clean": "npx nitrogen clean && cd android && ./gradlew clean",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json}\"",
    "check:cpp": "clang-format --dry-run --Werror cpp/**/*.cpp nitrogen/generated/**/*.cpp && echo Check complete!",
    "format:cpp": "clang-format -i 'cpp/**/*.{cpp,hpp,c,h}' 'nitrogen/generated/**/*.{cpp,hpp,h}'",
    "open:ios": "xed example/ios",
    "open:android": "open -a \"Android Studio\" example/android"
  },
  "keywords": [
    "react-native",
    "nitro",
    "jsi",
    "conceal",
    "crypto",
    "c++",
    "expo"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Acktarius/react-native-conceal-crypto"
  },
  "bugs": {
    "url": "https://github.com/Acktarius/react-native-conceal-crypto/issues"
  },
  "license": "MIT",
  "author": "Acktarius <acktarius@protonmail.com> (https://github.com/Acktarius)",
  "homepage": "https://github.com/Acktarius/react-native-conceal-crypto#readme",
  "devDependencies": {
    "@react-native-community/cli": "latest",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "clang-format": "^1.8.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "expo": "^54.0.12",
    "expo-module-scripts": "^5.0.7",
    "nitrogen": "^0.30.2",
    "react-native": "0.81.4",
    "react-native-nitro-modules": "^0.30.2",
    "typescript": "^5.5.0"
  },
  "peerDependencies": {
    "expo": "*",
    "react": "*",
    "react-native": "*"
  },
  "files": [
    "cpp/",
    "src/",
    "android/",
    "ios/",
    "nitrogen/generated/",
    "package.json",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
